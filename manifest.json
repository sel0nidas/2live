{
    "name": "2LIVE",
    "version": "1.02",
    "manifest_version": 3,
    "description": "An extension allows you to watch another youtube live stream that your streamer can't show on live stream.",
    
    "host_permissions": [
      "*://www.twitch.tv/*", 
      "*://www.youtube.com/*",
      "*://app.ssportplus.com/*",
      "*://www.primevideo.com/*"
    ],
    "permissions": ["scripting", "tabs"],
    "icons": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "action": {
      "default_title": "2LIVE",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "logo.png",
        "32": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
      }
    },
    "web_accessible_resources": [{
      "resources": ["*.png", "*.jpg"],
      "matches": ["<all_urls>"]
    }]
  }